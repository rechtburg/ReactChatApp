{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": [
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": ["jest"]
}
