{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint:latest",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "variable-name": false,
    "one-variable-per-declaration": false,
    "no-console": true,
    "no-debugger": true,
    "no-implicit-dependencies": [true, "dev"],
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": false,
        "printWidth": 100
      }
    ]
  }
}
